.dish-card {
  display: flex;
  margin: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.dish-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
  border-radius: 5px;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.dish-type {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.dish-description {
  font-size: 12px;
  color: #888;
  margin-bottom: 5px;
}

.cook-steps {
  flex: 1;
}

.step {
  font-size: 14px;
  color: #333;
  margin-bottom: 5px;
}
.example-search {
  background-color: #fff;
  padding: 16rpx 32rpx;
}
