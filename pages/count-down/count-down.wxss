/* 在 wxss 文件中 */
.card {
  /* display: flex; */
  margin: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}
.flexx{
    display: flex;
}
.thumbnail {
  width: 300rpx;
  height: 170rpx;
  margin-right: 10px;
  border-radius: 5px;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.description {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.source {
  font-size: 12px;
  color: #888;
  margin-top: auto; /* 将 source 部分放置到卡片底部 */
}
