/* 在 wxss 文件中 */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.video {
  width: 100%;
  height: 100%;
}

.refresh-indicator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
}
